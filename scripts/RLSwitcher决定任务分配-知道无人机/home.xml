<Root>
    <HomeUpdateMemoryGrid/>
    <HomeUpdateUnreachableGrid/>

    <Sequence>
        <HomeHasDroneNeedRecharge/>
        <HomeRechargeDrone/>
    </Sequence>

    <RLSwitcher
            algo="SAC"
            name="SAC-RLSwitcher-AssignArea"
            domain="default"
            path="{{models_dir}}/{{name}}"
            save_path="{{models_dir}}/{{name}}"
            save_interval="20"
            tensorboard_log="{{logs_dir}}/{{name}}"
            log_interval="1"
            verbose="0"
            exp_fill="false"
            train="{{train}}"
            obs_uav="{{true}}"
    >
        <Sequence>
            <HomeHasUnseenArea/>
            <HomeAssignUnseenExplorationAreas repeat_count="10"/>
        </Sequence>
        <Sequence>
            <HomeHasFireArea/>
            <HomeAssignFireExplorationAreas repeat_count="10"/>
        </Sequence>
    </RLSwitcher>

</Root>
